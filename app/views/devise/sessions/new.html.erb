<div class="banner" style="background-image:url(<%= asset_path 'pic6.jpg' %>)">
<h3 class="mt-3 font-weight-bold col-6 offset-3 text-center pt-4 pb-3 h1-color">Log In <i class="fas fa-leaf"></i></h3>

<div class=" form-style col-6 offset-3 border p-4 bg-white">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
